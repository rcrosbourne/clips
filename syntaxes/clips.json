{
	"scopeName" : "source.clp",
	"name" : "Clips",
	"comment" : "Clips language",
	"fileTypes" : [
		"clp"
	],
	"foldingStartMarker" : "^\\(",
	"foldingStopMarker": "\\)",
	"patterns" : [
		{
			"comment" : "Line comments",
			"begin" : ";",
			"end" : "$",
			"beginCaptures":{
				"0" : {
					"name" : "punctuation.definition.comment.clp"
				}
			},
			"name" : "comment.line.double-slash.clp"
		},
		{
			"name" : "keyword.clp",
			"match": "\\b(defrule|assert|retract)\\b"
		},
		{
 			"comment" : "Assertion declarations",
			"match" : "^\\(\\s*(assert)\\s+(\\(.+?\\)+)\\s*\\)$",
			"captures" : {
				"1" : {
					"name" : "keyword.clp"
				}
			}
		}
	],
	"repository" : {
		
	}
}